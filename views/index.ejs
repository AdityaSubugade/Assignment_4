<%- include('layout/header') %>


    <% if (massage){%>
        <div class="alert alert-dismissible fade shadow alert-<%= massage.type %>" 
            role="alert">
        <button class="btn-close" type="button" data-bs-dismiss="alert"
        aria-label="Close"></button>
        <strong><%= massage.massage %></strong>
        </div>
    <% } %>
    <% if(users != '') {%>
   <div class="contrainer">
    <div class="row">
   
         <% users.forEach((row)=>{ %>
      <div class="col-md-3">
        
                <div class="card shadow">
                    <img src="<%= row.image %>" class="img-fluid card-img-top">
                    <div class="card-body p-5">
                      <div class="d-flex justify-content-between align-items-center">
                        <p class="btn btn-dark rounded-pill"><%= row.productName%></p>
                        <p class="lead mt-4">Quntity:<%= row.quantity%></p>
                      </div>
                      <hr><hr>
                      <h3 class="fw-bold text-primary"><span class="glyphicon">&#xe148;</span><%= row.price%></h3><br>
                      <p><span>Description:-</span><%= row.productDescription%></p>
                    </div>
                    <div class="card-footer px-5 py-3 d-flex justify-content-end">
                      <a href="/edit/<%= row._id %>" class="btn btn-success rounded-pill me-2">Edit</a>
                        <a href="/delete/<%= row._id %>" class="btn btn-danger rounded-pill">Delete</a>
                    </div>
                  </div>
      </div>   

        <% }) %>


            <% }else{%>
                <h1 class="text-center text-secondary mt-5">no user found to the data basde </h1>
           <% } %>
     
    </div>
         
      </div>
    </div>
   </div>

  </div>

<%- include('layout/footer') %>
